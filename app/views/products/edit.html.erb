<div class="container">
	<h1>Editing Product</h1>
	<form  action="/products/<%= @product.id %>"  accept-charset="UTF-8" method="post">
	  <input type="hidden" name="_method" value="patch">
	  <div class="form-group">
	    <label for="product[name]" >Name</label>
	    <input type="text" class="form-control" id="product[name]" name="product[name]" aria-describedby="product[name]" value="<%= @product.name %>">
	   </div>
	   <div class="form-group">
	    <label for="product[color]" >Color</label>
	    <input type="text" class="form-control" id="product[color]" name="product[color]" aria-describedby="product[color]" value="<%= @product.color %>">
	   </div>
	   <div class="form-group">
			<label for="product[category_id]">Category</label>
		    <select class="form-control" id="product[category_id]" name="product[category_id]">
		    	<% @categories.each do |category| %>
		    		<option value="<%= category.id %>"><%= category.name %></option>
		    	<% end %>
		    </select>
	   </div>
	   <div class="form-group">
	    <label for="product[size]" >Size</label>
	    <input type="text" class="form-control" id="product[size]" name="product[size]" aria-describedby="product[size]" value="<%= @product.size %>">
	   </div>
	   <div class="form-group">
	    <label for="product[price]" >Price</label>
	    <input type="text" class="form-control" id="product[price]" name="product[price]" aria-describedby="product[price]" value="<%= @product.price %>">
	   </div>
	   <div class="form-group">
	   	<label for="product[store_id]">Store</label>
	    <select class="form-control" id="product[store_id]" name="product[store_id]">
	    	<% @stores.each do |store| %>
	    		<option value="<%= store.id %>"><%= store.name %></option>
	    	<% end %>
	    </select>
	   </div>
	  <button type="submit"  value="Update Store" data-disable-with="Update Store"  class="btn btn-primary">Submit</button>
	</form>

	<%= link_to 'Back', root_path %>
</div>
